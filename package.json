{
  "name": "jwt-webserver",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/server.js",
  "scripts": {
    "start": "node .",
    "watch-sass": "node-sass -w --recursive -o dist/public/css/ src/public/scss/",
    "start:dev": "nodemon dist/server.js",
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run build:sass && npm run copy-static-assets",
    "build:dev": "tsc --watch --preserveWatchOutput && npm run copy-static-assets",
    "build:sass": "node-sass --output-style compressed --recursive -o dist/public/css/ src/public/scss/",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "dev": "concurrently \"npm:build:dev\" \"npm:start:dev\" \"npm:watch-sass\"",
    "key:generate": "node ./generateKeypair.js",
    "test": "jest --coverage --verbose --forceExit --detectOpenHandles"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.13",
    "nanoid": "^3.1.22",
    "node-sass": "^6.0.1",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/eslint": "^7.2.13",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.3",
    "@types/node": "^16.3.0",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.4.4",
    "concurrently": "^6.2.0",
    "eslint": "^7.24.0",
    "jest": "^27.0.5",
    "sass": "^1.35.1",
    "shelljs": "^0.8.4",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
